<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/padding10"
    >
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/_185sdp"
        android:padding="@dimen/padding8"
        android:text="Productivity"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSize14"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userPicture"
            android:layout_width="@dimen/button48"
            android:layout_height="@dimen/button48"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_profile"
            app:shapeAppearanceOverlay="@style/circular"
         />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/border_color"
            android:layout_marginStart="@dimen/padding6"
            android:layout_margin="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/padding16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/padding3"
                android:paddingHorizontal="@dimen/padding10">
                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSize18"
                    android:layout_gravity="left"
                    android:fontFamily="@font/bold"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/_185sdp"
                    android:text="Productivity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSize18"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSize10"
                    android:layout_gravity="right"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
